{
  "compilerOptions": {
    "lib": ["es2015", "es2017"],
    "target": "ES2015",
    "types": ["node",],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
