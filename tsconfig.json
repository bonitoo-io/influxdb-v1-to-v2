{
  "compilerOptions": {
    "lib": ["es2015", "es2017"],
    "target": "ES2015",
    "module": "commonjs",
    "types": ["node"],
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./build",
    "removeComments": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
